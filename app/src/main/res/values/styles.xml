<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBg</item>
    </style>


    <style name="titleTextStyle">
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_23ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Corner" parent="">
        <item name="cornerSize">@dimen/_10sdp</item>
        <item name="elevation">@dimen/_4sdp</item>
    </style>

    <style name="moreTitleStyle">
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="moreSubTitleStyle">
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/green</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/ad</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">@dimen/_14sdp</item>
        <item name="android:height">@dimen/_14sdp</item>
    </style>
</resources>